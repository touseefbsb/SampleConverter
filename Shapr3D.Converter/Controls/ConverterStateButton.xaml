<UserControl
    x:Class="Shapr3D.Converter.Controls.ConverterStateButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <Button
        Margin="2"
        HorizontalAlignment="Stretch"
        HorizontalContentAlignment="Stretch"
        Command="{x:Bind Command}"
        CommandParameter="{x:Bind CommandParameter}"
        Style="{ThemeResource ButtonRevealStyle}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <muxc:ProgressRing IsActive="{x:Bind IsConverting, Mode=OneWay}" />
            <SymbolIcon Symbol="Download" Visibility="{x:Bind IsDownloadAvailable, Mode=OneWay}" />
            <controls:UniformGrid Grid.Column="1" Rows="2">
                <TextBlock Text="{x:Bind Text, Mode=OneWay}" />
                <muxc:ProgressBar Value="{x:Bind Progress, Mode=OneWay}" />
            </controls:UniformGrid>
        </Grid>
    </Button>
</UserControl>
