<UserControl
    x:Class="Shapr3D.Converter.Controls.Flag"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:Shapr3D.Converter.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">
    <ContentPresenter
        Padding="{x:Bind Padding}"
        HorizontalContentAlignment="{x:Bind HorizontalContentAlignment}"
        VerticalContentAlignment="{x:Bind VerticalContentAlignment}"
        Background="{x:Bind FlagColor, Converter={StaticResource ColorToBrushConverter}}"
        BorderBrush="{x:Bind BorderBrush}"
        BorderThickness="{x:Bind BorderThickness}"
        Content="{x:Bind FlagContent}"
        CornerRadius="4"
        FontSize="{x:Bind FontSize}"
        Foreground="{x:Bind Foreground}"
        MaxLines="1"
        TextWrapping="Wrap" />
</UserControl>
